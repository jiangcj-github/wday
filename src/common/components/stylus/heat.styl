@import "../resource/color.styl"
@import "../resource/image.styl"

.heat-wrap
  position relative
  .rect
    width 30%
    height 100%
    background $heat-empty-bg
    margin 0 auto
    overflow hidden
    box-shadow 0 0 15px 5px $heat-shadow
    .fill
      background-image linear-gradient(0deg, $heat-gradient-start 0%, $heat-gradient-end 100%)
  .circle
    margin-top -100%
    padding-top 100%
    width 100%
    height 0
    border-radius 50%
    background $heat-empty-bg
    overflow hidden
    .fill
      background-image linear-gradient(0deg, $heat-gradient-start 0%, $heat-gradient-end 100%)
  .scale
    position absolute
    right -10%
    top 8%
    width 20%
    background no-repeat center 0
    background-size 100% 100%
    background-image $heat-scale







