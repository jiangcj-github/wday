.web-wrap
  min-width 1200px


 // 划入控件展示  父亲加.pop-parent  控件加.pop-children 和 方位词
.pop-parent
  position relative

.pop-children
  position absolute
  display none
  padding 0 .1rem
  color #25272D
  height .25rem
  line-height .25rem
  font-size .12rem
  text-align center
  background-color #CCC
  border-radius .02rem

.pop-parent:hover .pop-children
  display block


.uppop-children
  top -.3rem

.uppop-children:before
  content ""
  width 0
  height 0
  border .05rem solid #CCC
  border-left .05rem solid transparent
  border-right .05rem solid transparent
  border-bottom .05rem solid transparent
  position absolute
  left 50%
  transform translateX(-50%)
  bottom -.1rem


.downpop-children
  bottom -.3rem

.downpop-children:before
  content ""
  width 0
  height 0
  border .05rem solid #CCC
  border-left .05rem solid transparent
  border-right .05rem solid transparent
  border-top .05rem solid transparent
  position absolute
  right 50%
  transform translateX(-50%)
  top -.1rem

.leftpop-children
