@import "../resource/color.styl"
@import "../resource/image.styl"

.router-wrap
  .container
    min-height calc(100vh - 244px)
  .footer-wrap
    width 100%;
    height 244px
    background $footer-bg
    position relative
    .footer
      width 1200px
      margin 0 auto
      white-space: nowrap;
      .logo
        margin-top 60px
        float left
        width 372px
        b
          font-size 38px
          color $footer-color-weight
          display block
          letter-spacing 3.2px
        small
          font-size 16px
          color $footer-color-weight
          margin-top 10.3px
          display block
      .col
        display inline-block
        vertical-align top
        padding-top 40px
        width 257px
        p
          color $footer-color-weight
          font-size 14px
          letter-spacing 0.05px
          margin-bottom 20px
        a
          line-height 17px
          margin-top 6px
          display block
          color $footer-color-normal
          cursor pointer
          font-size 12px
          img
            width 20px
            height auto
            margin-right 6px
          &:hover
            color $footer-color-hover
    .ba
      text-align center
      position absolute
      bottom 20px
      font-size 12px
      color $footer-color-ba
      left 0
      right 0
    .rf
      position fixed
      right 20px
      bottom 20px
      a
        display block
        cursor pointer
        width 50px
        height 50px
        background $footer-color-weight
        border-radius 4px
        box-shadow 0 0 4px 0 $footer-shadow-rf
        &:hover
          background $footer-color-hover






