@import "../resource/color.styl"
@import "../resource/image.styl"

.router-wrap
  .footer-wrap
    width 100%;
    height 243px
    background $footer-background
    position relative
    .footer
      padding 0 120px
      width 1440px
      margin 0 auto
      white-space: nowrap;
      h3
        margin-top 60px
        float left
        margin-right 210px
        b
          font-size 38px
          color $footer-color-weight
          display block
          letter-spacing 3.2px
        small
          font-size 16px
          color $footer-color-weight
          margin-top 10.3px
          display block
      .col
        display inline-block
        vertical-align top
        padding-top 40px
        width 257px
        p
          color $footer-color-weight
          font-size 14px
          letter-spacing 0.05px
        ul
          margin-top 20px
          li
            line-height 17px
            margin-top 6px
            span
              color $footer-color-light
            img
              width 20px
              height auto
              margin-right 6px
    .ba
      text-align center
      position absolute
      bottom 20px
      font-size 12px
      color $footer-color-light2
      left 0
      right 0





