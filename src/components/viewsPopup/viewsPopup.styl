@import "../../common/css/variable.styl"
.view-popup-wrap
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(0, 0, 0, .5)
  z-index 5
  .view-info
    position absolute
    left 50%
    top 50%
    width 5.64rem
    height 2.56rem
    padding .24rem .3rem .44rem
    background $col3335
    border-radius (.06rem)
    transform translateX(-50%) translateY(-50%)
    .close-popup
      width .16rem
      height .16rem
      margin-left 4.9rem
      cursor pointer
    h2
      font-size 0.2rem
      color $colD6D6
      font-weight bold
      letter-spacing 0
      margin .04rem 0 .44rem
    div
      //width 5.04rem
      margin-bottom .24rem
      .base-input-wrap
        float left
        input
          width 3.74rem
          height .4rem
          //background $col2F30
          //border 1px solid $cola2225
          border-radius(0.02rem 0 0 0.02rem)
          &.long
            width 5.04rem
      .verify-btn
        float left
        width 1.3rem
        height .4rem
        border-radius(0 .02rem .02rem 0)
    .set-btn
      width 1rem
      height .4rem
      margin-left 4rem