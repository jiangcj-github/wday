@import "../resource/color.styl"
@import "../resource/image.styl"

//文章列表 样式表

.article
  width 43.5%
  background $_article_main_bg_color
  margin 15px auto
  padding 15px
  li
    border-bottom: 1px solid $_article_main_line_color
    padding 15px 0
  .article-has-img
    display flex
    justify-content space-between
    margin-bottom 15px
    img
      width 200px
      height 150px
  .article-title
    font-size 20px
    line-height 28px
  .article-content
    font-size 14px
    line-height 28px
  .article-info
    display flex
    justify-content space-between
    .right-info
      display flex
      justify-content space-between
      .watch-div
        display inline-block
        background-image $_icon_article_watch
        background-size contain
        width 15px
        height 15px
      .watch-span
        font-size 14px
      .love-div
        display inline-block
        background-image $_icon_article_love
        background-size contain
        width 15px
        height 15px
      .love-span
        font-size 14px

      .favourite
        display inline-block
        background-image $_icon_article_love
        background-size contain
        width 15px
        height 15px


