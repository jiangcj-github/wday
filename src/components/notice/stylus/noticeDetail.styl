@import "./variable.styl"

.notice-detail-wrap
  width 12rem
  margin 0 auto
  padding .4rem 0 .4rem
  h1
    margin-bottom .5rem
    color $notice-font-title
    a
      color $notice-font-title
  h2
    margin-bottom .22rem
    color: $notice-font-title
    span
      float left
      font-size .28rem
      color $notice-font-detail
    b
      float right
  h3
    padding .2rem .44rem
    background $notice-bg-active
    margin-bottom .22rem
    color $notice-font-title
    font-size 0.14rem
    letter-spacing 0.01rem
    line-height 0.26rem
  h4
    text-align right
  .content
    position relative
    margin-bottom .5rem
    color $notice-font-detail
    line-height 0.28rem
    text-indent 2em
    strong
      font-weight bold
    em
      font-style italic
    img
      display block
      //width 4.83rem
      max-width 8.5rem
      margin 0 auto 0.2rem auto
    p
      font-size 0.14rem
      color $notice-font-para
      letter-spacing 0.01rem
      text-align justify

  h5
    margin-bottom .22rem
    span
      color $notice-font-detail
    a
      color $notice-font-active
  h6
    span
      color $notice-font-detail
    a
      color $notice-font-active
      margin-right 0.1rem