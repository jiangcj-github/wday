@import "../resource/color.styl"
@import "../resource/image.styl"

.news-day-item
  width 30%
  margin auto
  background-color $_news_bg
  .date-card
    border-radius: 4px;
    padding 10px
    .date-card-main
      display inline-block
      width 55px
      text-align center
      background-image $_news_date_bg
      background-size contain
      background-repeat no-repeat
      p.month
        color white
        font-size 12px
        line-height 18px
      p.day
        font-size 18px
        line-height 35px
        margin-top -2px
    .date-card-other
      display inline-block
      margin-left 20px
      p.date-is
        font-size 20px
        line-height 28px
      p.week
        font-size 14px
        line-height 20px
    .jump
      display inline-block
      float right
      padding 10px
      img
        width 20px

  .news-item
    display flex
    justify-content space-between
    margin 15px 0
    padding 10px

    .news-time
      width 15%
      span
        min-width 20px
        font-size 14px
        line-height 20px
      i
        padding-left 10px
    .news-main
      width 80%
      .news-title
        font-size 14px
        line-height 20px
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        width 90%

      .news-content
        font-size 14px
        line-height 22px

