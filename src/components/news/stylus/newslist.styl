@import "../resource/color.styl"
@import "../resource/image.styl"

.news-list
  width 22%
  margin auto
  background #fff
  position relative

  .hiddenCard
    position fixed
    top 10px
    z-index 300
    width 22%
    background #fff

    .date-card
      border-radius: 4px;
      padding 10px
      .date-card-main
        display inline-block
        width 55px
        text-align center
        border: 1px solid #EEEEEE;
        p.month
          color white
          background red
          font-size 12px
          line-height 18px
        p.day
          font-size 18px
          line-height 35px
      .date-card-other
        display inline-block
        margin-left 20px
        p.date-is
          font-size 20px
          line-height 28px
        p.week
          font-size 14px
          line-height 20px
      .jump
        display inline-block
        float right
        padding 20px

  .news-list-item

    .thumbs
      padding 10px 0
      span.thumbs-good-span, span.thumbs-bad-span
        margin-left 5px
    .date-card
      border-radius: 4px;
      padding 10px
      .date-card-main
        display inline-block
        width 55px
        text-align center
        border: 1px solid #EEEEEE;
        p.month
          color white
          background red
          font-size 12px
          line-height 18px
        p.day
          font-size 18px
          line-height 35px
      .date-card-other
        display inline-block
        margin-left 20px
        p.date-is
          font-size 20px
          line-height 28px
        p.week
          font-size 14px
          line-height 20px
      .jump
        display inline-block
        float right
        padding 20px
    .news-item
      display flex
      justify-content space-between
      margin 15px 0
      padding 10px

      .news-time
        width 20%
        span
          min-width 20px
          font-size 14px
          line-height 20px
        i
          padding-left 10px
      .news-main
        width 70%
        .news-title
          font-size 14px
          line-height 20px
          overflow hidden
          white-space nowrap
          text-overflow ellipsis
          width 90%

        .news-content
          font-size 14px
          line-height 22px


