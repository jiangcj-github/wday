@import "../resource/color.styl"
@import "../resource/image.styl"


.date-card
  border-radius: 4px;
  .date-card-main
    display inline-block
    width 55px
    text-align center
    border: 1px solid #EEEEEE;
    p.month
      color white
      background red
      font-size 12px
      line-height 18px
    p.day
      font-size 18px
      line-height 35px
  .date-card-other
    display inline-block
    margin-left 20px
    p.date-is
      font-size 20px
      line-height 28px
    p.week
      font-size 14px
      line-height 20px