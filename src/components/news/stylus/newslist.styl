@import "../resource/color.styl"
@import "../resource/image.styl"

.news-list
  display flex
  justify-content center
  margin 15px

  .list-main
    width 760px
    position relative
    .top-card.run
      position fixed
      width 760px
      top 0
    .top-card.stop
      width 760px
    .has-more-news.stop
      position absolute
      top 94px
      display flex
      justify-content center
      align-items center
      height 36px
      width 760px
    .has-more-news.run
      display flex
      justify-content center
      align-items center
      height 36px
      width 760px
    .news-thumbs
      float right
      width 30%



