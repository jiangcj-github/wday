@import "../resource/color.styl"
@import "../resource/image.styl"

.news
  width 760px
  min-height 650px
  margin 15px auto
  background $_news_bg
  box-shadow 0 0 4px 0 rgba(204,204,204,0.50)
  border-radius 2px
  padding 20px 20px 40px 20px
  .date-card
    border-radius: 4px;
    .date-card-main
      display inline-block
      width 55px
      text-align center
      background-image $_news_date_bg
      background-size contain
      background-repeat no-repeat
      p.month
        color white
        font-size 12px
        line-height 18px
      p.day
        font-size 18px
        line-height 35px
        margin-top -2px
        color $_news_color_weight

    .date-card-other
      display inline-block
      margin-left 20px
      p.date-is
        font-size 20px
        line-height 28px
        color $_news_color_weight
      p.week
        font-size 14px
        line-height 20px
        color $_news_color_light
  .news-date
    margin 40px 0 30px 0
    font-size 18px
    line-height 25px
    color $_news_color_weight
  .news-title
    font-size 22px
    line-height 30px
    color $_news_color_weight

  .news-content
    font-size 20px
    line-height 34px
    color $_news_color_weight

  .news-thumbs
    margin 20px 0
    .thumbs
      float right
      width 250px