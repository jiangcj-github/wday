.google-wrap
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(0, 0, 0, .7)
  z-index 5
  .google-info
    position absolute
    left 50%
    top 50%
    width 11.6rem
    height 4.6rem
    padding .24rem .3rem .44rem
    background $user-bg-popup
    border-radius (.06rem)
    transform translateX(-50%) translateY(-50%)
    .close-popup
      width .16rem
      height .16rem
      margin-left 10.8rem
      cursor pointer
    .pop-title
      margin .04rem 0 .44rem
      font-size .2rem
    div
      ul
        float left
        color $user-font-normal
        em
          color $user-font-warn
        li:first-child
          width .44rem
          height .44rem
          background $user-bg-geogleStep
          border-radius (50%)
          text-align center
          line-height .44rem
          color $user-font-geogleStep
          margin-bottom .24rem
      ul:nth-child(1)
        width 3.5rem
        .google-btn
          width 1.5rem
          height .4rem
          line-height 0.4rem
          background $user-bg-btn
          color $user-font-btn
        li:nth-child(2)
          margin-bottom .44rem
        li:nth-child(3)
          margin-bottom .18rem
        li:nth-child(4)
          margin-bottom .5rem
        li:last-child
          a
            color $user-font-geogleDownload
      ul:nth-child(2)
        width 3.7rem
        margin-right .2rem
        li:nth-child(2)
          margin-bottom .24rem
        li:nth-child(3)
          width 1rem
          height 1rem
          margin-bottom .25rem
          canvas
            border 0.05rem solid $user-font-normal
            width 1rem !important
            height 1rem !important
      ul:nth-child(3)
        width 3.5rem
        li:nth-child(2)
          margin-bottom .18rem
          color $user-font-warn
        li:nth-child(3)
          margin-bottom .24rem
        li:nth-child(4)
          margin-bottom .44rem
        li:nth-child(5)
          margin-bottom .14rem
        li:nth-child(6)
          height .4rem
          .base-input-wrap
            float left
            input
              width 2rem
              height .4rem
              padding-left .1rem
              //background $col2F30
              //border 1px solid $cola2225
              border-right none
              border-radius (.02rem 0 0 .02rem)
          .name-btn
            float left
            width 1rem
            height .4rem
            background $user-bg-btn
            color $user-font-btn
            border-radius (0 .02rem .02rem 0)
            border none
            &.no-click
              opacity .5
            &.can-click
              opacity 1