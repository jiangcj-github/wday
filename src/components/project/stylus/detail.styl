@import "../resource/color.styl"
@import "../resource/image.styl"

.project-detail

  .profile-wrap
    background $detail-bg
    box-shadow 0 0 4px 0 $list-shadow
    .profile
      width 760px
      margin 0 auto
      position relative
      .d1
        height 100px
        display flex
        align-items center
        border-bottom 1px solid $detail-border
        .d1-l
          flex-grow 1
          img
            height 60px
            width auto
            float left
          .name
            line-height 20px
            margin-bottom 12px
            margin-left 80px
            b
              font-size 20px
              color $detail-color-weight
              margin-right 6px
            span
              font-size 14px
              color color $detail-color-weight
          .badge
            margin-left 80px
            i
              display inline-block
              line-height 24px
              padding 0 12px
              background $detail-bg-badge
              border-radius 73px
              margin-right 10px



        .d1-r
          text-align right
          .status
            font-size 14px
            color $detail-color-active
            margin-bottom 18px
          .share-wrap
            i
              display inline-block
              vertical-align top
              background no-repeat center center
              margin-left 20px
              height 20px
              width 20px
              cursor pointer
              &.tw
                background-image $detail-tw
                background-size 16px auto
                &:hover
                  background-image $detail-tw-hover
              &.fb
                background-image $detail-fb
                background-size auto 16px
                &:hover
                  background-image $detail-fb-hover
              &.share
                background-image $detail-share
                background-size 16px auto
                &:hover
                  background-image $detail-share-hover
              &.br
                border-right 1px solid $detail-border
                width 0
                height 16px
                margin-top 2px
              &.collect
                padding-left 26px
                width auto
                line-height 20px
                background no-repeat 0 center
                background-size 16px auto
                font-size 14px
                color $detail-color-light
                &.yes
                  background-image $list-collect-yes
                  &:hover
                    background-image $list-collect-yes-hover
                &.no
                  background-image $list-collect-no
                  &:hover
                    background-image $list-collect-no-hover


      .d2
        height 126px
        padding 20px 130px 20px 0
        .thead
          margin-bottom 16px
          line-height 20px
          display flex
          p
            font-size 14px
            color $detail-color-light
        .tr
          display flex
          p
            line-height 20px
            font-size 14px
            color $detail-color-weight
            &:not(:last-of-type)
              margin-bottom 10px
          .recvCoin
            span
              margin-right 6px
          .step
            p
              margin-bottom 12px
            .progress-wrap
              display inline-block
              vertical-align top
              width 50px
              margin-right 10px
              margin-top 6px
            i
              display inline-block
              vertical-align top
              line-height 17px
              font-size 12px
              color $detail-color-active
        .time
          width 120px
        .minmax
          width 170px
        .recvCoin
          width 125px
        .step
          width 127px
        .heat
          width 66px
          text-align center

      .link
        position absolute
        top 100px
        bottom 0
        right 0
        width 100px
        padding 20px 0
        a
          display block
          width 100px
          height 36px
          line-height 34px
          text-align center
          border-radius 4px
          border 1px solid $detail-color-active
          font-size 14px
          color $detail-color-active
          cursor pointer
          &:first-of-type
            margin-bottom 12px
          &:hover
            background $detail-bg-hover





  .content
    width 760px
    margin 10px auto
    background $detail-bg
    border-radius 2px
    box-shadow 0 0 4px 0 $detail-shadow
    overflow hidden
    .tab
      height 50px
      line-height 47px
      padding 0 20px
      border-bottom 1px solid $detail-border
      a
        display inline-block
        color $detail-color-weight
        margin-right 40px
        font-size 16px
        &.active
          border-bottom 3px solid $detail-color-active
          font-weight bold

    .para
      margin 0 20px
      padding 30px 0
      border-bottom  1px solid $detail-border
      h3
        line-height 22px
        margin-bottom 16px
        span
          font-size 16px
          color $detail-color-weight
        img
          width auto
          height 16px
          margin-right 7px
          vertical-align -2px
    .para1
      padding 20px 0
      p
        line-height 26px
        font-size 16px
        color $detail-color-weight
        a
          display inline-block
          height 26px
          line-height 26px
          font-size 16px
          color $detail-color-active
          cursor pointer
          background no-repeat 100% center
          background-size 8px auto
          padding-right 16px
          vertical-align -1px
          &:hover
            color $detail-color-link
          &.more
            background-image $detail-spread
            margin-left 10px
            &:hover
              background-image $detail-spread-hover
          &.fold
            background-image $detail-retract
            display block
            text-align right
            &:hover
              background-image $detail-retract-hover











