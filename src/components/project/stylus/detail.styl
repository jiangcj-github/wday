@import "../resource/color.styl"
@import "../resource/image.styl"

.project-detail
  //顶部项目介绍
  .profile-wrap
    background $detail-bg
    box-shadow 0 0 4px 0 $list-shadow
    .profile
      width 760px
      margin 0 auto
      position relative
      .d1
        height 100px
        display flex
        align-items center
        border-bottom 1px solid $detail-border

        .d1-l
          flex-grow 1
          img
            height 60px
            width auto
            float left
          .name
            line-height 20px
            margin-bottom 12px
            margin-left 80px
            b
              font-size 20px
              color $detail-color-weight
              margin-right 6px
            span
              font-size 14px
              color color $detail-color-weight
          .badge
            margin-left 80px
            i
              display inline-block
              line-height 24px
              padding 0 12px
              background $detail-bg-badge
              border-radius 73px
              margin-right 10px
              color $detail-color-badge
              font-size 12px

        //分享
        .d1-r
          text-align right
          .status
            font-size 14px
            color $detail-color-active
            margin-bottom 18px
          .share-wrap
            i
              display inline-block
              vertical-align top
              background no-repeat center center
              margin-left 20px
              height 20px
              width 20px
              cursor pointer
              &.tw
                background-image $detail-tw
                background-size 16px auto
                &:hover
                  background-image $detail-tw-hover
              &.fb
                background-image $detail-fb
                background-size auto 16px
                &:hover
                  background-image $detail-fb-hover
              &.share
                background-image $detail-share
                background-size 16px auto
                &:hover
                  background-image $detail-share-hover
              &.br
                border-right 1px solid $detail-border
                width 0
                height 16px
                margin-top 2px
              &.collect
                padding-left 26px
                width auto
                line-height 20px
                background no-repeat 0 center
                background-size 16px auto
                font-size 14px
                color $detail-color-light
                &.yes
                  background-image $list-collect-yes
                  &:hover
                    background-image $list-collect-yes-hover
                &.no
                  background-image $list-collect-no
                  &:hover
                    background-image $list-collect-no-hover

      .d2
        height 126px
        padding 20px 130px 20px 0
        .thead
          margin-bottom 16px
          line-height 20px
          display flex
          p
            font-size 14px
            color $detail-color-light
        .tr
          display flex
          p
            line-height 20px
            font-size 14px
            color $detail-color-weight
            &:not(:last-of-type)
              margin-bottom 10px
          .recvCoin
            span
              margin-right 6px
          .step
            p
              margin-bottom 12px
            .progress-wrap
              display inline-block
              vertical-align top
              width 50px
              margin-right 10px
              margin-top 6px
            i
              display inline-block
              vertical-align top
              line-height 17px
              font-size 12px
              color $detail-color-active
        .time
          width 120px
        .minmax
          width 170px
        .recvCoin
          width 125px
        .step
          width 127px
        .heat
          width 66px
          text-align center
          .heat-wrap
            display inline-block
          i
            line-height 60px
            display inline-block
            vertical-align top
            margin-left 11px
            font-size 14px
            color $detail-color-weight

      .link
        position absolute
        top 100px
        bottom 0
        right 0
        width 100px
        padding 20px 0
        a
          display block
          width 100px
          height 36px
          line-height 34px
          text-align center
          border-radius 4px
          border 1px solid $detail-color-active
          font-size 14px
          color $detail-color-active
          cursor pointer
          &:first-of-type
            margin-bottom 12px
          &:hover
            background $detail-bg-hover


  .content
    width 760px
    margin 10px auto
    background $detail-bg
    border-radius 2px
    box-shadow 0 0 4px 0 $detail-shadow
    overflow hidden
    .tab-wrap
      height 50px
      .tab
        height 50px
        line-height 47px
        padding 0 20px
        border-bottom 1px solid $detail-border
        &.fix
          position fixed
          top 0
          width 760px
          margin 0 auto
          background $detail-bg
          box-shadow 0 0 4px 0 $detail-shadow
          z-index 100
      a
        display inline-block
        color $detail-color-weight
        margin-right 40px
        font-size 16px
        cursor pointer
        &.active
          border-bottom 3px solid $detail-color-active

    //para通用
    .para
      margin 0 20px
      padding 30px 0
      border-bottom  1px solid $detail-border
      h3
        line-height 22px
        margin-bottom 16px
        span
          font-size 16px
          color $detail-color-weight
        img
          width auto
          height 16px
          margin-right 7px
          vertical-align -2px

    //项目介绍
    .para1
      padding 20px 0
      p
        line-height 26px
        font-size 16px
        color $detail-color-weight
        a
          display inline-block
          height 26px
          line-height 26px
          font-size 16px
          color $detail-color-active
          cursor pointer
          background no-repeat 100% center
          background-size 8px auto
          padding-right 16px
          vertical-align -1px
          &:hover
            color $detail-color-link
          &.more
            background-image $detail-spread
            margin-left 10px
            &:hover
              background-image $detail-spread-hover
          &.fold
            background-image $detail-retract
            display block
            text-align right
            &:hover
              background-image $detail-retract-hover


    //代币详情
    .para2
      table
        width 100%
        tr
          height 36px
          line-height 26px
          td
            &:nth-child(1)
              width 220px
            &:nth-child(2)
              width 280px
            &:nth-child(3)
              width 240px
            b
              font-size 16px
              color $detail-color-light
            i
              font-size 16px
              color $detail-color-weight
      .p2-h3
        margin-top 20px
        height 22px
        i
          display inline-block
          vertical-align top
          width 10px
          height 10px
          background $detail-color-active
          border-radius 1px
          margin 6px 9px 0 0
      .hb-c
        display flex
        .price
          line-height 26px
          flex-grow 1
          label
            vertical-align top
            font-size 16px
            color $detail-color-light
          div
            display inline-block
            p
              color $detail-color-weight
              font-size 16px
              margin-bottom 10px
              &:last-of-type
                margin-bottom 0
        .profit
          text-align center
          float right
          margin-left 24px
          label
            display block
            font-size 16px
            color $detail-color-light
            line-height 26px
            margin-bottom 14px
          i
            display inline-block
            width 54px
            height 54px
            border-radius 100%
            border 2px solid $detail-border
            color $detail-color-weight
            font-size 16px
            text-align center
            line-height 50px

    //项目优势
    .para3
      padding 30px 0 20px 0
      p
        font-size 16px
        color $detail-color-weight
        line-height 26px
        margin-bottom 10px

    //热度评价
    .para4
      .flex
        display flex
        .left
          width 220px
          text-align center
          .heat-wrap
            display inline-block
          i
            font-size 28px
            color $detail-color-heat
            margin-left 24px
            vertical-align 5px
        ul
          width 50%
          &:first-of-type
            padding-right 30px
          li
            padding-right 40px
            line-height 26px
            label
              font-size 16px
              color $detail-color-light
            span
              font-size 16px
              color $detail-color-weight
              float right
            &:not(:last-of-type)
              margin-bottom 10px


    //用户打分
    .para5
      padding 30px 0 20px 0
      position relative
      table
        width 600px
        padding-right 144px
        &.tb2
          width 300px
        tr
          line-height 26px
          height 36px
          td
            text-align right
            &:first-of-type
              text-align left
              font-size 16px
              color $detail-color-light
            .radio
              display inline-block
              color $detail-color-weight
              font-size 16px
              height 26px
              line-height 26px
              background no-repeat 0 center
              background-size 16px 16px
              padding-left 22px
              cursor pointer
              &.no
                background-image $detail-radio-normal
                &:hover
                  background-image $detail-radio-hover
              &.yes
                background-image $detail-radio-selected
      .submit
        position absolute
        bottom 30px
        right 0
        button
          font-size 16px
          color $detail-color-btn
          line-height 26px
          padding 5px 12px
          background $detail-color-active
          cursor pointer
          border-radius 4px
          border 0
          outline 0
          &.disable
            opacity 0.5
            pointer-events none
          &:hover
            background $detail-color-link
        img
          width 114px
          height auto



    //团队介绍
    .para6
      padding 30px 0 0 0
      table
        width 100%
        td
          text-align center
          position relative
          .headimg
            display inline-block
            margin-bottom 10px
            height 80px
            width 80px
            cursor pointer
            border-radius 100%
            &:hover
              transform scale(1.1)
          .linkedin
            display block
            width 16px
            height 16px
            position absolute
            left 50%
            top 0
            margin-top 64px
            margin-left 24px
          b
            display block
            font-size 16px
            color $detail-color-weight
            line-height 26px
          i
            display block
            font-size 14px
            color $detail-color-light
            line-height 26px
            margin-bottom 20px

    //路线图
    .para7
      .route-line
        position relative
        p
          line-height 26px
          display flex
          &:not(:last-of-type)
            margin-bottom 10px
          .s1
            height 26px
            font-size 14px
            color $detail-color-light
            width 100px
            position relative
            flex-shrink 0
            &:after
              display inline-block
              content ""
              border-radius 100%
              background $detail-color-weight
              width 10px
              height 10px
              z-index 2
              position absolute
              right 0
              top 50%
              margin-top -5px
          .s2
            font-size 16px
            color $detail-color-weight
            margin-left 20px
        i
          position absolute
          top 10px
          bottom 0
          left 95px
          border-left 1px solid $detail-border
          transform translateX(-0.5px)



