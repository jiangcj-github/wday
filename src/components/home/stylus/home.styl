@import "../resource/color.styl"
@import "../resource/image.styl"
@import "./projectList.styl"


.home-wrap
  position relative
  .home
    width 1200px
    margin 0 auto
    display flex
    .article-wrap
      width 620px
      margin 10px
    .news-wrap
      width 314px
      overflow-y scroll
      height calc(200vh)
      margin 10px 0

      .floatTop
        position absolute
        top 10px
        width 297px
        z-index 400
      .floatTop ~ .news-item
        margin-top 70px
      .top-card
        width 298px // 坑 浏览去边框
        position absolute
        top 10px
        z-index 300
        .has-more-news
          position absolute
          top 74px
          width 100%
          display flex
          justify-content center
          align-items center
          height 36px
