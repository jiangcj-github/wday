@import "../resource/color.styl"
@import "../resource/image.styl"

.search-main
  width 760px
  margin 20px auto
  padding 20px
  background-color $_search_main_bg_color
  box-shadow 0 0 4px 0 rgba(204,204,204,0.50)
  border-radius 2px
// 搜索tab页
  .search-tab
    display flex
    justify-content space-between
    height 49px
    border-bottom 1px solid $_search_border_color
    .tab-ul
      display flex
      justify-content space-between
      width 152px
      li
        font-size 16px
        line-height 26px
      li.active
        border-bottom 3px solid $_search_tab_border_color
// 搜索文章结果
//  .search-article

// 搜索快讯结果
  .search-news
    .news-item
      margin 15px 0
      p.news-time
        color $_search_font_color_light
        margin 32px 0 16px 0
      .news-main
        .news-title
          font-size 16px
          line-height 22px
          overflow hidden
          white-space nowrap
          text-overflow ellipsis
          width 90%
          margin-bottom 10px

        .news-content
          font-size 14px
          line-height 22px
        .news-thumbs
          margin 20px 0
          text-align right
          .thumbs
            display inline-flex
            width 250px
            .share-div
              text-align initial
// 搜索项目结果


//无图样式
div.no-result
  margin 150px auto
  text-align center
  img.no-result-img
    display block
    width 350px
    height 164px
    margin 0 auto 20px auto

  span
    color $_search_font_color_light
    font-size 16px
    line-height 22px


